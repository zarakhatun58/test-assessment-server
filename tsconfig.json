{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": ["node"],
    "typeRoots": [ "./node_modules/@types", "../node_modules/@types", "../../node_modules/@types" ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
